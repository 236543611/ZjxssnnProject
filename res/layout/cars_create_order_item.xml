<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="10dp"
    android:orientation="horizontal"
    >
    <ImageView
        android:id="@+id/create_order_image"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_weight="1.6"
        android:scaleType="fitXY"
        android:layout_marginLeft="10dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/test_like"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/create_order_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/service_provider_color"
            android:maxLines="2"
            android:ellipsize="end"
            android:textSize="12sp"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:id="@+id/cars_item_guige"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="规格属性："
                android:textColor="@color/main_color18"
                android:textSize="13sp"
                />
            <TextView
                android:id="@+id/cars_item_guige_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/cars_item_guige"
                android:textColor="@color/main_color18"
                android:textSize="13sp"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:paddingRight="10dp"
            >
            <TextView
                android:id="@+id/cars_item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="价格："
                android:textColor="@color/main_color18"
                android:textSize="13sp"
                />
            <TextView
                android:id="@+id/create_order_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/cars_item_price"
                android:textColor="@color/main_color10"
                android:textSize="13sp"
                />
            <TextView
                android:id="@+id/create_order_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@color/main_color10"
                android:textSize="13sp"
                />
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>
