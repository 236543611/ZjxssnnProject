<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color16"
    android:id="@+id/head_layout" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white" >

    <include
        android:id="@+id/merchant_search_title_layout"
        layout="@layout/merchant_search_layout" />

    <ListView
        android:id="@+id/merchant_search_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@null"
        android:dividerHeight="0.5dp"
        android:layout_below="@+id/merchant_search_title_layout"
         >
    </ListView>
</RelativeLayout>
</RelativeLayout>