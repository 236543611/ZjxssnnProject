<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/commodity_list_selector"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/popup_mall_list_type_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/commodity_list_selector"
        android:orientation="horizontal"
        android:padding="10dp" >

        <TextView
            android:id="@+id/pop_comm_type_list_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="@string/commodity_list_item_type_name"
            android:textColor="@color/back"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/pop_comm_type_list_image"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:visibility="gone"
            android:contentDescription="@null"
            android:src="@drawable/fanye_gray" />
    </LinearLayout>

</LinearLayout>