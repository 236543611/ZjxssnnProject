<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="10dp"
    android:orientation="horizontal"
    >
    <ImageView
        android:id="@+id/create_order2_image"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_weight="2"
        android:scaleType="fitXY"
        android:src="@drawable/test_like"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/create_order2_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="@color/back"
            />
        <TextView
            android:id="@+id/create_order2_shuxing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="规格属性：保养润肤"
            android:textSize="14sp"
            android:singleLine="true"
            android:layout_marginTop="10dp"
            android:textColor="@color/main_color18"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            >
            <TextView
                android:id="@+id/new_mall_item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="价格："
                android:textSize="14sp"
                android:textColor="@color/main_color18"
                />
            <TextView
                android:id="@+id/new_mall_item_price_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥650.00"
                android:textSize="16sp"
                android:layout_toRightOf="@+id/new_mall_item_price"
                android:textColor="@color/main_color10"
                />
            <TextView
                android:id="@+id/new_mall_item_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="X3"
                android:layout_alignParentRight="true"
                android:textSize="17sp"
                android:textColor="@color/main_color10"
                />
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>
