<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="10dp"
    android:orientation="horizontal"
    >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_weight="3.3"
        android:scaleType="fitXY"
        android:layout_gravity="center_vertical"
        android:src="@drawable/test_like"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="测试商品数据TRTd4452商品子选项5548SDGRTT"
            android:textColor="@color/service_provider_color"
            android:maxLines="2"
            android:enabled="true"
            android:textSize="13sp"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            >
            <TextView
                android:id="@+id/cars_item_guige"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商品规格："
                android:textColor="@color/service_provider_color"
                android:textSize="14sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="黑色43码"
                android:layout_toRightOf="@+id/cars_item_guige"
                android:textColor="@color/my_color16"
                android:textSize="14sp"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            >
            <TextView
                android:id="@+id/cars_item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="250元"
                android:textColor="@color/my_color15"
                android:textSize="14sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="数量X3"
                android:layout_alignParentRight="true"
                android:textColor="@color/service_provider_color"
                android:textSize="14sp"
                />
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>
