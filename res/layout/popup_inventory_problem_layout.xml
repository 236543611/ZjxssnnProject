<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent2"
    android:paddingLeft="25dp"
    android:paddingRight="25dp"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/popup_inventory_style"
        android:orientation="vertical"
        android:paddingBottom="10dp" >

        <RelativeLayout
            android:id="@+id/popup_sign_head_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:padding="10dp" >

            <TextView
                android:id="@+id/popup_setting_user_head_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:paddingBottom="10dp"
                android:text="@string/app_tip"
                android:textColor="@color/head_image_color"
                android:textSize="15sp" />
        </RelativeLayout>

        <View
            android:id="@+id/popup_inventory_view1"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/popup_sign_head_layout"
            android:background="@color/gray" />

        <LinearLayout
            android:id="@+id/popup_jh_alert_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/popup_inventory_view1"
            android:background="@color/white"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/popup_inventory_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="16dp"
                android:text="@string/inventory_problem"
                android:textColor="@color/head_image_color"
                android:textSize="15sp" />
        </LinearLayout>

        <View
            android:id="@+id/popup_inventory_view2"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/popup_jh_alert_layout"
            android:background="@color/gray" />

        <LinearLayout
            android:id="@+id/popup_jh_btn_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/popup_inventory_view2"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" >

            <Button
                android:id="@+id/popup_inventory_confirm_btn"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="10dp"
                android:background="@drawable/bg_inventory_btn_style"
                android:text="@string/confirm_1"
                android:textColor="@color/head_image_color"
                android:textSize="16sp" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>