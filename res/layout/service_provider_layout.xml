<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color16"
    android:id="@+id/head_layout"
    android:orientation="vertical" >

    <include
        android:id="@+id/title_service_provider_layout"
        layout="@layout/title_service_provider_layout" />

    <ScrollView
        android:id="@+id/service_provider_scroll_layout"
        android:layout_width="match_parent"
        android:background="@color/my_order_view_color"
        android:layout_height="match_parent" >

        <LinearLayout
            android:id="@+id/service_provider_scroll_content_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/service_provider_title_image"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:contentDescription="@null"
                android:scaleType="fitXY"
                android:src="@drawable/service_provider_title" />

            <LinearLayout
                android:id="@+id/service_provider_activity_detial_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/service_provider_activity_detial_show"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp" >

                    <ImageView
                        android:id="@+id/service_provider_image"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:contentDescription="@null"
                        android:src="@drawable/meirongyuan" />

                    <TextView
                        android:id="@+id/service_provider_detail_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/service_provider_image"
                        android:text="@string/service_provider_detail"
                        android:textColor="@color/service_provider_color"
                        android:textSize="15sp" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/main_view_color" />

                <TextView
                    android:id="@+id/service_provider_content_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:textColor="@color/service_provider_color"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/service_provider_phone_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp" >

                <ImageView
                    android:id="@+id/service_provider_phone_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="2"
                    android:contentDescription="@null"
                    android:src="@drawable/iconfont_a" />

                <TextView
                    android:id="@+id/service_provider_phone_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:paddingRight="5dp"
                    android:text="@string/service_provider_phone"
                    android:textColor="@color/service_provider_color"
                    android:textSize="14sp" />

                <View
                    android:id="@+id/service_provider_view1"
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:background="@color/main_title_color" />

                <ImageView
                    android:id="@+id/service_provider_phone_image2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1.9"
                    android:contentDescription="@null"
                    android:src="@drawable/iconfont_dianhua" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/service_provider_address_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp" >

                <ImageView
                    android:id="@+id/service_provider_address_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="2"
                    android:contentDescription="@null"
                    android:src="@drawable/iconfont_address" />

                <TextView
                    android:id="@+id/service_provider_address_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:paddingRight="5dp"
                    android:text="@string/service_provider_address"
                    android:textColor="@color/service_provider_color"
                    android:textSize="14sp" />

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    
                    android:background="@color/main_title_color" />

                <LinearLayout
                    android:id="@+id/service_provider_address_image_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1.9" >

                    <ImageView
                        android:id="@+id/service_provider_address_image2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:contentDescription="@null"
                        android:src="@drawable/iconfont_daohang" />

                    <TextView
                        android:id="@+id/service_provider_address_daohang"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:text="@string/service_provider_daohang"
                        android:textColor="@color/service_provider_color" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>