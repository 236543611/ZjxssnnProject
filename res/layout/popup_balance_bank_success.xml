<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/popup_bottom_style"
    android:paddingBottom="10dp"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/popup_bindbing_bank_head_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/popup_bank_success_style"
        android:layout_weight="1"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="20dp" >

        <TextView
            android:id="@+id/popup_bindbing_bank_success_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/bank_yue_tixian"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/popup_bindbing_bank_x_image"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/description"
            android:src="@drawable/x" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/popup_binding_content_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.5"
        android:layout_marginTop="-10dp"
        android:background="@color/my_content_color"
        android:orientation="vertical"
        android:paddingBottom="10dp" >

        <LinearLayout
            android:id="@+id/popup_binding_bank_name_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:padding="10dp" >

            <TextView
                android:id="@+id/popup_balance_money_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/money"
                android:textColor="@color/main_title_color"
                android:textSize="18sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/my_setting_line_color" />

        <LinearLayout
            android:id="@+id/popup_binding_bank_card_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:padding="10dp" >

            <TextView
                android:id="@+id/popup_binding_bank_card_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/balance_money_remind"
                android:textColor="@color/order_evaluation_commodity_name_color"
                android:textSize="12sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/my_setting_line_color" />

        <LinearLayout
            android:id="@+id/popup_binding_bank_success_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="10dp" >

            <TextView
                android:id="@+id/popup_binding_bank_success_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/balance_bank_money_success"
                android:textColor="@color/main_title_color"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/popup_binding_bank_success_image"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:contentDescription="@string/description"
                android:src="@drawable/success" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>