<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/new_cars_layout"
    android:background="@color/main_color16"
    >
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        >
    <include
        android:id="@+id/title_cars_layout"
        layout="@layout/title_cars_layout"
        />
    <ListView
        android:id="@+id/new_cars_list"
        android:layout_below="@+id/title_cars_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:divider="@color/my_color14"
        android:paddingBottom="180dp"
        android:dividerHeight="10dp"
        />
        <TextView
            android:id="@+id/cars_alert_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:visibility="gone"
            android:text="购物车暂时是空的"
            />
    <RelativeLayout
        android:id="@+id/cars_all_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="60dp"
        android:layout_alignParentBottom="true"
        android:layout_above="@+id/new_cars_bottom_layout"
        android:background="@drawable/bg_my_style5"
        >
        <RelativeLayout
            android:id="@+id/new_cars_bottom_zonghui_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@color/main_color2"
            >
            <ImageView
                android:id="@+id/new_cars_zonghui_image"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:src="@drawable/new_cars_gather"
                />
            <TextView
                android:id="@+id/cars_all_price_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/new_cars_zonghui_image"
                android:textColor="@color/service_provider_color"
                android:text="费用汇总"
                />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/cars_bottom_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:layout_below="@+id/new_cars_bottom_zonghui_layout"
            >
            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="10dp">
                <TextView
                    android:id="@+id/cars_ssb_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_weight="1.1"
                    android:layout_centerVertical="true"
                    android:textColor="@color/service_provider_color"
                    android:text="食尚币："
                    />
                <TextView
                    android:id="@+id/cars_ssb_text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_weight="1"
                    android:layout_centerVertical="true"

                    android:layout_toRightOf="@+id/cars_ssb_text"
                    android:textColor="@color/main_color10"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="10dp">
                <TextView
                    android:id="@+id/cars_ssjb_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_weight="1.1"
                    android:layout_centerVertical="true"
                    android:textColor="@color/service_provider_color"
                    android:text="食尚金币："
                    />
                <TextView
                    android:id="@+id/cars_ssjb_text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_weight="1"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/cars_ssjb_text"
                    android:textColor="@color/main_color10"
                    />
            </RelativeLayout>
        </LinearLayout>
        <View
            android:id="@+id/new_cars_view"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/cars_bottom_content"
            android:background="@color/gray"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_below="@+id/new_cars_view">
            <TextView
                android:id="@+id/cars_money_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_weight="1"

                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:textColor="@color/service_provider_color"
                android:text="现金(含运费)："
                />
            <TextView
                android:id="@+id/cars_money_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/cars_money_text"
                android:textColor="@color/main_color10"
                />
            <Button
                android:id="@+id/next_btn"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:textColor="@color/white"
                android:visibility="gone"
                android:background="@drawable/bg_my_style12"
                android:layout_alignParentTop="true"
                android:text="下一步"
                />
        </RelativeLayout>

    </RelativeLayout>
    <include
        android:id="@+id/new_cars_bottom_layout"
        layout="@layout/main_bottom_layout" />
        </RelativeLayout>
</RelativeLayout>
