<resources>

    <style name="NavPage">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_horizontal</item>
        <!-- <item name="android:background">@drawable/nav_page</item> -->
        <item name="android:background">@color/navpage</item>
    </style>

    <style name="stylePan">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/main_title_color</item>
    </style>
<!--
    <style name="AppTheme" parent="android:Theme.Light" />
-->
    <style name="AnimBottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@animator/push_bottom_in</item>
        <item name="android:windowExitAnimation">@animator/push_bottom_out</item>
    </style>

    <style name="AnimTop" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@animator/push_top_in</item>
        <item name="android:windowExitAnimation">@animator/push_top_out</item>
    </style>

    <style name="AnimTop_miss" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@animator/push_top_in_2</item>
        <item name="android:windowExitAnimation">@animator/push_miss</item>
    </style>

    <style name="AnimAlphaInToOut" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@animator/anim_alpha_in</item>
        <item name="android:windowExitAnimation">@animator/anim_alpha_out</item>
    </style>

    <style name="ActionSheetAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@animator/push_up_in</item>
        <item name="android:windowExitAnimation">@animator/push_up_out</item>
    </style>

    <style name="AppThemes" parent="@android:style/Theme.Holo.Light.NoActionBar">
        <item name="android:windowEnterAnimation">@animator/push_up_in</item>
        <item name="android:windowExitAnimation">@animator/push_up_out</item>
    </style>

    <style name="PopupAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@animator/push_bottom_in</item>
        <item name="android:windowExitAnimation">@animator/push_bottom_out</item>
    </style>

    <style name="AppThemess" parent="@android:style/Theme">
        <item name="android:windowNoTitle">true</item>
 <!-- 设置没有标题 -->
        <!-- 设置activity切换动画 -->
        <item name="android:windowAnimationStyle">@style/activityAnimation</item>
    </style>
    <!-- animation 样式 -->
    <style name="activityAnimation" parent="@android:style/Animation">
        <item name="android:activityOpenEnterAnimation">@animator/slide_right_in</item>
        <item name="android:activityOpenExitAnimation">@animator/slide_left_out</item>
        <item name="android:activityCloseEnterAnimation">@animator/slide_left_in</item>
        <item name="android:activityCloseExitAnimation">@animator/slide_right_out</item>
    </style>

    <style name="leftIn" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@animator/slide_left_in</item>
        <item name="android:windowExitAnimation">@animator/push_bottom_out</item>
    </style>

    <style name="StyleProgressBarMini" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:maxHeight">50dip</item>  
       <item name="android:minHeight">8dip</item>  
       <item name="android:indeterminateOnly">false</item>  
       <item name="android:indeterminateDrawable">@android:drawable/progress_indeterminate_horizontal</item>  
       <item name="android:progressDrawable">@drawable/progressbar_color</item>
    </style>
    <style name="AnimZoom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@animator/scale_in</item>
        <item name="android:windowExitAnimation">@animator/scale_out</item>
    </style>
    <style name="textStyle1">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/main_color16</item>
    </style>

</resources>