<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/popup_bottom_style"
    android:orientation="vertical"
    android:paddingBottom="10dp" >

    <RelativeLayout
        android:id="@+id/popup_confirm_pay_head_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:background="@drawable/popup_bank_success_style"
        android:paddingBottom="20dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp" >

        <TextView
            android:id="@+id/popup_confirm_pay_success_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/confirm_pay"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/popup_confirm_pay_x_image"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_alignParentRight="true"
            android:contentDescription="@string/description"
            android:src="@drawable/x" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/popup_confirm_pay_content_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="-10dp"
        android:layout_weight="1.2"
        android:background="@color/my_content_color"
        android:orientation="vertical"
        android:paddingBottom="10dp" >

        <TextView
            android:id="@+id/popup_confirm_pay_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/my_order_item_name"
            android:textColor="@color/order_evaluation_commodity_name_color"
            android:textSize="18sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/my_setting_line_color" />

        <RelativeLayout
            android:id="@+id/popup_confirm_pay_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="10dp" >

            <TextView
                android:id="@+id/popup_confirm_pay_money_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:text="@string/money"
                android:gravity="bottom"
                android:textColor="@color/main_title_color"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/popup_confirm_pay_yuan_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:paddingBottom="3dp"
                android:layout_alignBottom="@+id/popup_confirm_pay_money_text"
                android:layout_toRightOf="@+id/popup_confirm_pay_money_text"
                android:text="@string/yuan"
                android:textColor="@color/order_evaluation_commodity_name_color" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/my_setting_line_color" />

        <LinearLayout
            android:id="@+id/popup_confirm_pay_success_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="10dp" >

            <Button
                android:id="@+id/popup_confirm_pay_btn"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/bg_confirm_pay_down"
                android:padding="8dp"
                android:text="@string/confirm_pay"
                android:textColor="@color/white"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>