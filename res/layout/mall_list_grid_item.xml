<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/my_order_line_color"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/sign_list_item_content_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="3dp"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:paddingTop="3dp">

        <LinearLayout
            android:id="@+id/sign_item_new_commodity_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/sign_item_commodity_image"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:contentDescription="@null"
                android:scaleType="fitXY" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/order_evaluation_text_color" />

            <LinearLayout
                android:id="@+id/sign_item_commodity_detail_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:id="@+id/sign_item_new_commodity_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="left"
                    android:maxLines="2"
                    android:textColor="@color/user_name_color"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/mall_new_list_scj_volume"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="left"
                    android:singleLine="true"
                    android:text="市场价："
                    android:textColor="@color/mall_item_shichangjia_color"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/mall_new_list_price_volume"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="left"
                    android:singleLine="true"
                    android:text="售价："
                    android:textColor="@color/mall_item_shichangjia_color"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/sign_item_commodity_bi"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ellipsize="end"
                    android:gravity="left"
                    android:singleLine="true"
                    android:text="销量："
                    android:textColor="@color/mall_item_shichangjia_color"
                    android:textSize="13sp" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>