<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color16"
    android:id="@+id/head_layout"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

    <include
        android:id="@+id/tt_title_layout"
        layout="@layout/title_layout" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/tt_title_layout"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@color/white"
        android:orientation="horizontal"
        >
        <RelativeLayout
            android:id="@+id/cash_qb_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <ImageView
                android:id="@+id/new_cash_quanbu_image"
                android:layout_width="50px"
                android:layout_height="50px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="106px"
                android:src="@drawable/new_cashmall_menu_hover"
                />
            <TextView
                android:id="@+id/new_cash_quanbu_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="28px"
                android:layout_marginLeft="20px"

                android:textColor="@color/main_color16"
                android:layout_toRightOf="@+id/new_cash_quanbu_image"
                android:text="全部"
                />
            <View
                android:id="@+id/new_cash_quanbu_view"
                android:layout_width="match_parent"
                android:layout_height="3px"
                android:layout_marginLeft="5px"
                android:layout_marginRight="5px"
                android:layout_alignParentBottom="true"
                android:background="@color/main_color16"
                />
        </RelativeLayout>
        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_marginTop="12px"
            android:layout_marginBottom="12px"
            android:background="@color/main_color17"
            />
        <RelativeLayout
            android:id="@+id/cash_px_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <ImageView
                android:id="@+id/new_cash_px_image"
                android:layout_width="50px"
                android:layout_height="50px"
                android:layout_marginLeft="106px"
                android:layout_centerVertical="true"
                android:src="@drawable/new_cashmall_order_normal"
                />
            <TextView
                android:id="@+id/new_cash_px_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="28px"
                android:layout_marginLeft="20px"
                android:textColor="@color/main_color3"
                android:layout_toRightOf="@+id/new_cash_px_image"
                android:text="排序"
                />
            <View
                android:id="@+id/new_cash_px_view"
                android:layout_width="match_parent"
                android:layout_height="3px"
                android:visibility="gone"
                android:layout_marginLeft="5px"
                android:layout_marginRight="5px"
                android:layout_alignParentBottom="true"
                android:background="@color/main_color16"
                />
        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/my_order_line_color"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="20px"
        android:background="@color/main_color2"
        />
    <GridView
        android:id="@+id/tt_tj_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:listSelector="@null"
        android:numColumns="2"
        android:stretchMode="columnWidth" >
    </GridView>


</LinearLayout>
    <TextView
        android:id="@+id/tt_alert_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone"
        android:text="暂时没有数据！"
        />
        </RelativeLayout>
</RelativeLayout>
