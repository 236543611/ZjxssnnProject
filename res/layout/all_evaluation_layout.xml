<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color16"
    android:id="@+id/head_layout"
    android:orientation="vertical" >

    <include
        android:id="@+id/title_all_evaluation_id"
        layout="@layout/title_layout1" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/my_content_color"
    >



    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/my_setting_line_color" />

    <TextView
        android:id="@+id/all_evaluation_not_show"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textSize="15sp"
        android:textColor="@color/my_user_decription"
        android:text="@string/not_eval_show" />

    <ListView
        android:id="@+id/all_evaluation_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:divider="@color/my_setting_line_color"
        android:dividerHeight="0.5dp" >
    </ListView>
</LinearLayout>
</LinearLayout>