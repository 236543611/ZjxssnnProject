<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="25dp"
    android:paddingRight="25dp" >

    <LinearLayout
        android:id="@+id/currency_cz_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_popup_style"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/merchant_settled_popup_content_tishi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingBottom="16dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="8dp"
            android:text="提示"
            android:textColor="@color/back"
            android:textSize="15sp" />
	 <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray" />
        
        <RelativeLayout
            android:id="@+id/display_popup_content_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:background="@color/white"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/display_popup_chujia_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|center_vertical"
                android:padding="10dp"
                android:text="充值："
                android:visibility="gone"
                android:layout_marginTop="10dp"
                android:textColor="@color/service_provider_color"
                android:textSize="15sp" />
            <EditText
                android:id="@+id/display_popup_chujia_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|center_vertical"
                android:padding="10dp"
                android:hint="请输入充值金额"
                android:inputType="numberDecimal"
                android:layout_marginTop="10dp"
                android:maxLength="7"
                android:background="@drawable/bg_display_auction_edit_style"
                android:layout_centerHorizontal="true"
                android:textColor="@color/back"
                android:textSize="14sp" />
        </RelativeLayout>
        <TextView 
            android:id="@+id/currency_show_title_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:padding="10dp"
            android:textColor="@color/service_provider_color"
            android:text="充值消费币金额不可低于100元现金，充值100-499元现金可获得充值金额*110%的消费币，500-999元现金获得充值金额*115%的消费币，1000元及以上现金获得充值金额*120%的消费币，消费币可抵扣现金，在食尚男女平台任意商户使用。"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="10dp"
            android:background="@color/gray" />

        <LinearLayout
            android:id="@+id/mall_jh_bottom_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/currency_cz_ok"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/xieyi_text_selector"
                android:gravity="center_horizontal"
                android:padding="9dp"
                android:text="@string/jh_tishi_confirm"
                android:textColor="@color/head_image_color"
                android:textSize="16sp" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/bottom_back_color" />

            <TextView
                android:id="@+id/currency_cz_cancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/btn_right_bottom_selector"
                android:gravity="center_horizontal"
                android:padding="9dp"
                android:text="@string/soft_update_cancel"
                android:textColor="@color/head_image_color"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>