<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/my_content_color"
    
    android:orientation="vertical" >
    <LinearLayout 
        android:id="@+id/my_bill_item_content_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal"
        >
        <ImageView 
            android:id="@+id/my_bill_item_image"
            android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:layout_weight="2"
            />
        <LinearLayout 
            android:id="@+id/my_bill_item_bank_info"
            android:layout_width="match_parent"
        	android:layout_height="match_parent"
        	android:layout_weight="1"
        	android:layout_marginLeft="10dp"
        	android:orientation="vertical"
            >
            <TextView 
                android:id="@+id/my_bill_item_text_title"
                android:layout_width="match_parent"
        		android:layout_height="match_parent"
        		android:textSize="16sp"
        		android:layout_weight="1"
        		android:gravity="bottom"
        		android:textColor="@color/house_text_color"
        		android:text="@string/bill_text1"
                />
            <TextView 
                android:id="@+id/my_bill_item_text_date"
                android:layout_width="match_parent"
        		android:layout_height="match_parent"
        		android:textSize="12sp"
        		android:gravity="center_vertical"
        		android:layout_weight="1"
        		android:textColor="@color/house_text_color"
        		android:text="@string/date"
                />
        </LinearLayout>
        <TextView 
            android:id="@+id/my_bill_item_text_money"
                android:layout_width="match_parent"
        		android:layout_height="match_parent"
        		android:textSize="16sp"
        		android:gravity="center_vertical"
        		android:textColor="@color/house_text_color"
        		android:layout_weight="2"
        		android:text="@string/money_520_reduce"
            />
    </LinearLayout>

</LinearLayout>
