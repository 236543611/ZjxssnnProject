<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/mall_item_content_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp" >

        <ImageView
            android:id="@+id/mall_order_item_image"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="2.7"
            android:contentDescription="@null"
            android:scaleType="fitXY"
            android:src="@drawable/log" />

        <LinearLayout
            android:id="@+id/mall_order_item_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/mall_item_name_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/mall_item_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="台式电脑"
                    android:textColor="@color/mall_name_color"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/mall_item_logistics"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:visibility="gone"
                    android:text="@string/mall_item_check_logistics"
                    android:textColor="@color/mall_name_color"
                    android:textSize="15sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/mall_item_deliver_goods_status"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="发货状态：正在发送"
                android:textColor="@color/mall_content_color"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/mall_item_price"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="价格：29个食尚币"
                android:textColor="@color/mall_content_color"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/mall_item_address"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="发货地址：成都市温江区青啤大道18号中佳信集团"
                android:textColor="@color/mall_content_color"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/pay_pwd_color" />

</LinearLayout>