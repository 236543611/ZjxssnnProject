<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/my_content_color"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/my_bill_item_content_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp" >

        <ImageView
            android:id="@+id/my_bill_item_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:src="@drawable/red_image" android:contentDescription="@null"/>

        <LinearLayout
            android:id="@+id/my_bill_item_bank_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/my_bill_item_image"
            android:layout_marginLeft="10dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/my_bill_item_text_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="bottom"
                android:text="@string/grab_red_packets"
                android:textColor="@color/order_evaluation_commodity_name_color"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/my_bill_item_text_date"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/date"
                android:textColor="@color/house_text_color"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/my_bill_item_text_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textSize="13sp"
            android:text="@string/money_520_reduce_bi"
            android:textColor="@color/order_evaluation_commodity_name_color"
             />
    </RelativeLayout>
	<View 
	    android:layout_width="match_parent"
	    android:layout_height="0.5dp"
	    android:layout_marginLeft="50dp"
	    android:background="@color/my_setting_line_color"
	    />
</LinearLayout>