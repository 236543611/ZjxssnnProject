<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/my_order_view_color"
    android:orientation="vertical" >

    <include
        android:id="@+id/reserve_order_title_id"
        layout="@layout/title_reserve_order_info_layout" />

    <LinearLayout
        android:id="@+id/reserve_order_info_head_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="10dp" >

        <ImageView
            android:id="@+id/reserve_info_head_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2.3"
            android:contentDescription="@null"
            android:scaleType="fitXY"
            android:src="@drawable/order_item_test" />

        <LinearLayout
            android:id="@+id/reserve_info_head_name_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1.2"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/reserve_info_head_name_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/reserve_order_info_name_test"
                android:textColor="@color/main_merchant_item_title_color"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/reserve_info_head_name_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="@string/reserve_order_info_name_description"
                android:textColor="@color/my_user_decription2"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/reserve_order_info_fanli"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_weight="2.1"
            android:background="@drawable/commodity_item_rectangular_type"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/commodity_list_item_fanxian"
            android:textColor="@color/white"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/reserve_order_info_content_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/reserve_order_info_merchant_image_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp" >

            <ImageView
                android:id="@+id/reserve_order_info_merchant_image"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginLeft="10dp"
                android:contentDescription="@null"
                android:src="@drawable/order_info_merchant" />

            <TextView
                android:id="@+id/reserve_order_info_merchant_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/reserve_order_info_merchant_image"
                android:text="@string/my_order_merchant_info"
                android:textColor="@color/reserve_order_info_color"
                android:textSize="15sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:background="@color/reserve_order_info_view_color" />

        <LinearLayout
            android:id="@+id/reserve_info_merchant_content_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp" >

            <LinearLayout
                android:id="@+id/reserve_info_merchant_value_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/reserve_info_merchant_value_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/reserve_order_info_name_test"
                    android:textColor="@color/main_merchant_item_title_color"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/reserve_info_merchant_value_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="@string/reserve_order_info_name_description"
                    android:textColor="@color/my_user_decription2"
                    android:textSize="12sp" />
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/gray" />

            <ImageView
                android:id="@+id/reserve_info_merchant_phone_image"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="3"
                android:contentDescription="@null"
                android:src="@drawable/order_merchant_phone" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/reserve_order_info_list_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:padding="5dp" >

        <ImageView
            android:id="@+id/reserve_info_list_image"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginLeft="10dp"
            android:contentDescription="@null"
            android:src="@drawable/my_order_info_png" />

        <TextView
            android:id="@+id/reserve_info_list_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/reserve_info_list_image"
            android:text="@string/my_order_info_show"
            android:textColor="@color/reserve_order_info_color"
            android:textSize="15sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:background="@color/reserve_order_info_view_color" />

    <ListView
        android:id="@+id/reserve_order_info_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:background="@color/white"
         >
    </ListView>

</LinearLayout>