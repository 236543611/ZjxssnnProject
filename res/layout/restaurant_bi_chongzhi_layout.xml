<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color16"
    android:id="@+id/head_layout"
    android:orientation="vertical">

    <include
        android:id="@+id/title_restaurant_bi_chongzhi_layout"
        layout="@layout/title_layout1" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title_restaurant_bi_chongzhi_layout"
        android:background="@color/white"
        android:orientation="vertical">

        <View
            android:id="@+id/bi_chongzhi_view"
            android:layout_width="match_parent"
            android:layout_height="10dp"

            android:background="@color/shishangbi_chongzhi_color" />

        <RelativeLayout
            android:id="@+id/bi_code_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bi_chongzhi_view"
            android:layout_marginTop="20dp"
            android:padding="10dp">

            <TextView
                android:id="@+id/bi_code_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bi_code"
                android:textColor="@color/back"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/bi_code_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/bi_code_text"
                android:background="@drawable/bg_modify_user_edit_style"
                android:singleLine="true" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/bi_code_pwd_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bi_code_layout"
            android:layout_marginTop="10dp"
            android:padding="10dp">

            <TextView
                android:id="@+id/bi_code_pwd_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bi_code_pwd"
                android:textColor="@color/back"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/bi_code_pwd_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/bi_code_pwd_text"
                android:background="@drawable/bg_modify_user_edit_style"
                android:singleLine="true" />
        </RelativeLayout>

        <Button
            android:id="@+id/bi_chongzhi_btn"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bi_code_pwd_layout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:background="@drawable/btn_selector1"
            android:padding="8dp"
            android:text="@string/bi_chongzhi_liji"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tips_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bi_chongzhi_btn"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:text="@string/tip3"
            android:textColor="@color/bi_tips_color"
            android:textSize="13sp" />

        <!--  <TextView
             android:id="@+id/tips_text1"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_below="@+id/tips_text"
             android:layout_marginLeft="10dp"
             android:text="@string/tips1"
             android:textColor="@color/bi_tips_color"
             android:textSize="13sp" />

         <TextView
             android:id="@+id/tips_text2"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_below="@+id/tips_text1"
             android:layout_marginLeft="10dp"
             android:text="@string/tips2"
             android:textColor="@color/bi_tips_color"
             android:textSize="13sp" /> -->

        <LinearLayout
            android:id="@+id/bi_chongzhi_alert_view"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/transparent"
            android:orientation="horizontal"
            android:visibility="gone"></LinearLayout>
    </RelativeLayout>
</RelativeLayout>