<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color15"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:id="@+id/main_notice_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/new_main_point"
            />
        <TextView
            android:id="@+id/main_flipper_text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15px"
            android:layout_centerVertical="true"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_toRightOf="@+id/main_notice_1"
            android:textColor="@color/my_user_decription"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/new_main_flipper_layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="22px"
        >
        <ImageView
            android:id="@+id/main_notice_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/new_main_point"
            />
        <TextView
            android:id="@+id/main_flipper_text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15px"
            android:layout_centerVertical="true"
            android:maxLines="1"
            android:ellipsize="end"

            android:layout_toRightOf="@+id/main_notice_2"
            android:textColor="@color/my_user_decription"
            />
    </RelativeLayout>
</LinearLayout>
