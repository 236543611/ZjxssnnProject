<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/my_order_view_color"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/mall_detail_parmeter_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/mall_detail_parameter_scroll_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/mall_detail_head_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="left"
                android:text="@string/mall_detail_content_parameter_head"
                android:textColor="@color/my_user_decription"
                android:textSize="15sp" />

            <com.zjxfood.view.MyScrollListView
                android:id="@+id/mall_detail_parameter_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:divider="@color/gray"
                android:dividerHeight="0.5dp" >
            </com.zjxfood.view.MyScrollListView>

            <GridView
                android:id="@+id/mall_detail_parameter_grid"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginTop="5dp"
                android:columnWidth="120dp"
                android:listSelector="@color/popup_mall_item_back_color"
                android:numColumns="auto_fit"
                android:visibility="gone"
                android:paddingBottom="20dp"
                android:stretchMode="columnWidth"
                android:verticalSpacing="10dp" >
            </GridView>

            <TextView
                android:id="@+id/mall_detail_parameter_not_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/mall_detail_not_text"
                android:textColor="@color/my_user_decription"
                android:textSize="15sp"
                android:visibility="gone" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>