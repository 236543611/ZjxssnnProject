<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingTop="10dp" >

    <LinearLayout
        android:id="@+id/cash_order_content_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp" >

        <ImageView
            android:id="@+id/cash_order_left_image_layout"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_weight="2.5"
            android:contentDescription="@null"
            android:scaleType="fitXY"
            android:src="@drawable/test_like" />

        <LinearLayout
            android:id="@+id/cash_order_right_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/cash_order_name_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="商品名："
                android:textColor="@color/back"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/cash_order_winning_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="中奖号码："
                android:textColor="@color/back"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/cash_order_money_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="支付金额："
                android:textColor="@color/back"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/cash_order_state_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="支付状态："
                android:textColor="@color/back"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray" />

</LinearLayout>