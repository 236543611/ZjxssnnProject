<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mall_chose_id"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/ll1_pop_right"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00000000"
        android:paddingBottom="60dp"
        android:gravity="bottom"
        android:orientation="vertical" >

        <ListView
            android:id="@+id/lv_pop_right"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:divider="@color/my_color10"
            android:dividerHeight="0.5dp"
            android:padding="5dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/pop_bord"
            android:listSelector="@android:color/transparent"
            android:scrollbars="none" />

        <ImageView
            android:id="@+id/iv2_pop_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/gd_quick_action_bar_arrow_down"
            android:contentDescription="@string/app_name" />
    </LinearLayout>

</FrameLayout>