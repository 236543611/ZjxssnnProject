<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color16"
    android:id="@+id/head_layout"
    android:orientation="vertical" >

    <include
        android:id="@+id/title_set_security_id"
        layout="@layout/title_set_security_layout" />

    <ScrollView
        android:id="@+id/set_security_scroll_content_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/my_content_color"
        android:layout_below="@+id/title_set_security_id" >

        <LinearLayout
            android:id="@+id/set_security_content_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp" >

            <RelativeLayout
                android:id="@+id/set_security_problem_layout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/my_setting_line_color"
                android:padding="1dp" >

                <RelativeLayout
                    android:id="@+id/set_security_problem_layout1_head"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp" >

                    <TextView
                        android:id="@+id/set_security_problem_layout1_head_x"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/symbol"
                        android:textColor="@color/red" />

                    <TextView
                        android:id="@+id/set_security_problem_layout1_head_show"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@+id/set_security_problem_layout1_head_x"
                        android:text="@string/question1"
                        android:textColor="@color/house_text_color" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/set_security_layout1_problem_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/set_security_problem_layout1_head"
                    android:background="@color/my_content_color"
                    android:padding="5dp" >

                    <TextView
                        android:id="@+id/set_security_layout1_problem_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="@string/question1_s"
                        android:textColor="@color/my_order_text_color"
                        android:textSize="15sp" />

                    <ImageView
                        android:id="@+id/set_security_layout1_problem_image"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_alignParentRight="true"
                        android:contentDescription="@null"
                        android:src="@drawable/fanye_down" />
                </RelativeLayout>

                <View
                    android:id="@+id/set_security_layout1_view"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@+id/set_security_layout1_problem_layout"
                    android:background="@color/my_setting_line_color" />

                <RelativeLayout
                    android:id="@+id/set_security_layout1_answer_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/set_security_layout1_view"
                    android:background="@color/my_content_color"
                    android:padding="5dp" >

                    <EditText
                        android:id="@+id/set_security_layout1_answer_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:background="@null"
                        android:hint="@string/birthday"
                        android:textColor="@color/my_order_text_color"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/set_security_problem_layout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/my_setting_line_color"
                android:padding="1dp" >

                <RelativeLayout
                    android:id="@+id/set_security_problem_layout2_head"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp" >

                    <TextView
                        android:id="@+id/set_security_problem_layout2_head_x"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/symbol"
                        android:textColor="@color/red" />

                    <TextView
                        android:id="@+id/set_security_problem_layout2_head_show"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@+id/set_security_problem_layout2_head_x"
                        android:text="@string/question2"
                        android:textColor="@color/house_text_color" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/set_security_layout2_problem_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/set_security_problem_layout2_head"
                    android:background="@color/my_content_color"
                    android:padding="5dp" >

                    <TextView
                        android:id="@+id/set_security_layout2_problem_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="@string/question1_s"
                        android:textColor="@color/my_order_text_color"
                        android:textSize="15sp" />

                    <ImageView
                        android:id="@+id/set_security_layout2_problem_image"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_alignParentRight="true"
                        android:contentDescription="@null"
                        android:src="@drawable/fanye_down" />
                </RelativeLayout>

                <View
                    android:id="@+id/set_security_layout2_view"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@+id/set_security_layout2_problem_layout"
                    android:background="@color/my_setting_line_color" />

                <RelativeLayout
                    android:id="@+id/set_security_layout2_answer_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/set_security_layout2_view"
                    android:background="@color/my_content_color"
                    android:padding="5dp" >

                    <EditText
                        android:id="@+id/set_security_layout2_answer_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:hint="@string/input_answer"
                        android:background="@null"
                        android:textColor="@color/my_order_text_color"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/set_security_problem_layout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/my_setting_line_color"
                android:padding="1dp" >

                <RelativeLayout
                    android:id="@+id/set_security_problem_layout3_head"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp" >

                    <TextView
                        android:id="@+id/set_security_problem_layout3_head_x"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/symbol"
                        android:textColor="@color/red" />

                    <TextView
                        android:id="@+id/set_security_problem_layout3_head_show"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@+id/set_security_problem_layout3_head_x"
                        android:text="@string/question3"
                        android:textColor="@color/house_text_color" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/set_security_layout3_problem_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/set_security_problem_layout3_head"
                    android:background="@color/my_content_color"
                    android:padding="5dp" >

                    <TextView
                        android:id="@+id/set_security_layout3_problem_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="@string/question1_s"
                        android:textColor="@color/my_order_text_color"
                        android:textSize="15sp" />

                    <ImageView
                        android:id="@+id/set_security_layout3_problem_image"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_alignParentRight="true"
                        android:contentDescription="@null"
                        android:src="@drawable/fanye_down" />
                </RelativeLayout>

                <View
                    android:id="@+id/set_security_layout3_view"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@+id/set_security_layout3_problem_layout"
                    android:background="@color/my_setting_line_color" />

                <RelativeLayout
                    android:id="@+id/set_security_layout3_answer_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/set_security_layout3_view"
                    android:background="@color/my_content_color"
                    android:padding="5dp" >

                    <EditText
                        android:id="@+id/set_security_layout3_answer_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:hint="@string/input_answer"
                        android:background="@null"
                        android:textColor="@color/my_order_text_color"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </RelativeLayout>
            </RelativeLayout>

            <Button
                android:id="@+id/set_security_confirm_btn"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_login_on"
                android:padding="5dp"
                android:text="@string/confirm"
                android:textColor="@color/white"
                android:textSize="15sp" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>