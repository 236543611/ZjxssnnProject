<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="25dp"
    android:paddingRight="25dp" >

    <LinearLayout
        android:id="@+id/mall_jh_content_layou"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_popup_style"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/merchant_settled_popup_content_tishi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:text="@string/merchant_pay_tishi"
            android:textColor="@color/back"
            android:textSize="12sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray" />

        <TextView
            android:id="@+id/merchant_pay_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:text="田园印象"
            android:textColor="@color/back"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/merchant_pay_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:text="￥58"
            android:textColor="@color/main_title_color"
            android:textSize="18sp" />
<TextView
            android:id="@+id/merchant_pay_price_show"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:text="总金额：￥150  消费币抵扣：￥50"
            android:textColor="@color/service_provider_color"
            android:textSize="12sp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray" />

        <LinearLayout
            android:id="@+id/mall_jh_bottom_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/merchant_currency_confirm_pay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/xieyi_text_selector"
                android:gravity="center_horizontal"
                android:padding="15dp"
                android:text="@string/confirm_pay"
                android:textColor="@color/head_image_color"
                android:textSize="16sp" />
            <View 
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/gray"
                />
            <TextView
                android:id="@+id/merchant_currency_confirm_recharge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/xieyi_text_selector"
                android:gravity="center_horizontal"
                android:padding="15dp"
                android:visibility="gone"
                android:text="去充值"
                android:textColor="@color/head_image_color"
                android:textSize="16sp" />
            <!--
            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/bottom_back_color" />

            <TextView
                android:id="@+id/mall_jh_false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/btn_right_bottom_selector"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:text="@string/soft_update_cancel"
                android:textColor="@color/head_image_color"
                android:textSize="16sp" />
            -->
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>