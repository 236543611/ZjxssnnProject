<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="25dp"
    android:paddingRight="25dp"
    
     >

    <LinearLayout
        android:id="@+id/indiana_cj_content_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_popup_style"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/indiana_cj_pop_head_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="15dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/indiana_cj_pop_head_image"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/cj_success_png" />

            <TextView
                android:id="@+id/merchant_settled_popup_content_tishi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/indiana_cj_pop_head_image"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:text="恭喜你！"
                android:textColor="@color/back"
                android:textSize="16sp" />
       </RelativeLayout>

        <TextView
            android:id="@+id/indiana_cj_success"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:text="抽奖成功"
            android:textColor="@color/service_provider_color"
            android:textSize="15sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:visibility="gone"
            android:background="@color/gray" />

        <LinearLayout
            android:id="@+id/mall_jh_bottom_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:orientation="horizontal" >
			<Button 
			    android:id="@+id/indiana_cj_btn"
			    android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:padding="8dp"
                android:background="@drawable/bg_indiana_cj_btn"
                android:text="确定"
			    />
            <TextView
                android:id="@+id/mall_jh_true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/xieyi_text_selector"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:visibility="gone"
                android:text="@string/jh_tishi_confirm"
                android:textColor="@color/head_image_color"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>