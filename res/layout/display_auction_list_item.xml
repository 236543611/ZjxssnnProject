<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray" />

    <RelativeLayout
        android:id="@+id/display_auction_item_head_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingRight="10dp"
        android:orientation="horizontal" >

        <View
            android:id="@+id/display_auction_item_view"
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:background="@color/display_auction_item_view" />

        <TextView
            android:id="@+id/display_auction_item_head_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/display_auction_item_view"
            android:textColor="@color/display_auction_text_color"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/display_auction_item_head_haisheng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:visibility="gone"
            android:layout_alignParentRight="true"
            android:text="@string/main_timel_limit_paimai_jieshu"
            android:textColor="@color/main_xianshi_paimai_time_color"
            android:textSize="14sp" />

        <com.zjxfood.view.TimeListView
            android:id="@+id/display_auction_item_timedownview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textSize="14sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray" />

    <LinearLayout
        android:id="@+id/display_auction_item_content_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/display_auction_item_content_image"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="1.5"
            android:scaleType="fitXY"
            android:contentDescription="@null" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:background="@color/gray" />

        <LinearLayout
            android:id="@+id/main_timel_limit_auction_content_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/main_timel_limit_auction_content_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/service_provider_color"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/main_timel_limit_auction_content_model"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/service_provider_color"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/main_timel_limit_auction_content_screen"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/service_provider_color"
                android:textSize="13sp" />
<TextView
                android:id="@+id/main_timel_limit_auction_content_memory"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/service_provider_color"
                android:textSize="13sp" />
            <TextView
                android:id="@+id/main_timel_limit_auction_content_price"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/service_provider_color"
                android:textSize="13sp" />
<TextView
                android:id="@+id/main_timel_limit_auction_content_numbers"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/service_provider_color"
                android:textSize="13sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/display_auction_item_right_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2.1"
            android:layout_gravity="center_vertical"
            android:src="@drawable/paimai_youla" android:contentDescription="@null"/>
    </LinearLayout>

</LinearLayout>