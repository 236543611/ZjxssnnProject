<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color16"
    android:id="@+id/head_layout">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/my_order_view_color"
        android:paddingBottom="20dp" >

    <include
        android:id="@+id/auction_order_value_value_title_id"
        layout="@layout/title_my_cash_create_order_layout" />

    <ScrollView
        android:id="@+id/auction_order_value_scroll_content_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="30dp"
        android:layout_below="@+id/auction_order_value_value_title_id" >

        <LinearLayout
            android:id="@+id/auction_order_value_content_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/auction_value_head_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="10dp" >

                <ImageView
                    android:id="@+id/indiana_create_order_head_image"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_weight="1.7"
                    android:contentDescription="@null" />

                <LinearLayout
                    android:id="@+id/indiana_create_order_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/indiana_create_order_head_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:textColor="@color/back"
                        android:textSize="14sp" />

                    <RelativeLayout
                        android:id="@+id/indiana_create_order_head_price_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical" >

                        <TextView
                            android:id="@+id/indiana_create_order_head_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="快递费："
                            android:textColor="@color/main_merchant_item_title_color"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/indiana_create_order_head_price_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_toRightOf="@+id/indiana_create_order_head_price"
                            android:textColor="@color/mall_item_shmoney_color"
                            android:textSize="13sp" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/indiana_create_order_head_order"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="订单号："
                        android:textColor="@color/main_merchant_item_title_color"
                        android:textSize="13sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/auction_value_head_state"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="5dp"
                    android:layout_weight="2"
                    android:text="待付款"
                    android:textColor="@color/mall_item_shmoney_color"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/mall_detail_receiving_information_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/mall_detail_receiving_information_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="2.5"
                    android:contentDescription="@null"
                    android:src="@drawable/iconfont_kuaidi" />

                <TextView
                    android:id="@+id/mall_detail_receivint_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:text="@string/mall_detail_receiving_information"
                    android:textColor="@color/mall_detail_receving_color"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/indiana_create_order_modity_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:layout_weight="2.2"
                    android:background="@drawable/mall_modify_address_solid"
                    android:paddingBottom="3dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="3dp"
                    android:text="@string/mall_detail_receiving_information_modity"
                    android:textColor="@color/mall_detail_shmoney_color"
                    android:textSize="13sp" />
            </LinearLayout>
            <!-- 收货人详情 -->

            <LinearLayout
                android:id="@+id/mall_detail_receiving_content_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="10dp" >

                <TextView
                    android:id="@+id/indiana_create_order_receiving_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="@string/mall_detail_receiving_name"
                    android:textColor="@color/service_provider_color" />

                <TextView
                    android:id="@+id/indiana_create_order_receiving_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="@string/mall_detail_receiving_phone"
                    android:textColor="@color/service_provider_color" />

                <TextView
                    android:id="@+id/indiana_create_order_receiving_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:ellipsize="end"
                    android:maxLines="3"
                    android:text="@string/mall_detail_receiving_address"
                    android:textColor="@color/service_provider_color" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/auction_value_order_info_title_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:padding="5dp" >

                <ImageView
                    android:id="@+id/auction_value_order_info_image"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:contentDescription="@null"
                    android:src="@drawable/my_order_info_png" />

                <TextView
                    android:id="@+id/auction_value_order_info_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/auction_value_order_info_image"
                    android:text="订单信息"
                    android:textColor="@color/reserve_order_info_color" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/auction_order_value_info_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="10dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/indiana_create_order_order_info1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/my_user_decription" />
                <TextView
                    android:id="@+id/indiana_create_order_order_info2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/my_user_decription" />
                <TextView
                    android:id="@+id/indiana_create_order_order_info3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/my_user_decription" />
                <TextView
                    android:id="@+id/indiana_create_order_order_info4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/my_user_decription" />
                <TextView
                    android:id="@+id/indiana_create_order_order_info5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/my_user_decription" />
                <TextView
                    android:id="@+id/indiana_create_order_order_info6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/my_user_decription" />
                <TextView
                    android:id="@+id/indiana_create_order_order_info7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/my_user_decription" />
                <TextView
                    android:id="@+id/indiana_create_order_order_info8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/my_user_decription" />
                <TextView
                    android:id="@+id/indiana_create_order_order_info9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:visibility="gone"
                    android:textColor="@color/my_user_decription" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/indiana_create_order_value_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/bg_login_on"
        android:padding="8dp"
        android:text="创建订单"
        android:textColor="@color/white"
        android:textSize="15sp" />
</RelativeLayout>
</RelativeLayout>