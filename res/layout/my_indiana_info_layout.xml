<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color16"
    android:id="@+id/head_layout"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/commodity_list_view_color"
        android:orientation="vertical" >

    <include
        android:id="@+id/my_indiana_info_title"
        layout="@layout/title_my_indiana_info_layout" />

    <LinearLayout
        android:id="@+id/my_indiana_info_head_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="5dp" >

        <ImageView
            android:id="@+id/my_indiana_info_head_image"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="2.5"
            android:contentDescription="@null"
            android:scaleType="fitXY" />

        <LinearLayout
            android:id="@+id/my_indiana_info_head_content_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/my_indiana_info_head_content_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textColor="@color/back"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/my_indiana_info_head_content_price"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textColor="@color/my_indiana_price_color"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/my_indiana_info_state_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:padding="10dp" >

        <TextView
            android:id="@+id/my_indiana_info_state_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="中奖结果："
            android:textColor="@color/service_provider_color"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/my_indiana_info_state_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/my_indiana_info_state_text"
            android:textColor="@color/my_indiana_price_color"
            android:textSize="15sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/my_indiana_info_cj_user_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:padding="5dp" >

        <ImageView
            android:id="@+id/my_indiana_info_cj_user_image"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:contentDescription="@null"
            android:src="@drawable/choujianghao" />

        <TextView
            android:id="@+id/my_indiana_info_cj_user_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/my_indiana_info_cj_user_image"
            android:text="我的抽奖号"
            android:textColor="@color/service_provider_color"
            android:textSize="15sp" />
    </RelativeLayout>

    <ListView
        android:id="@+id/my_indiana_info_cj_user_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@null"
        android:dividerHeight="0.5dp"
        android:layout_marginTop="1dp" />
</LinearLayout>
</LinearLayout>