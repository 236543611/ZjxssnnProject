<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparents1"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/sign_jh_alert_content_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:background="@drawable/popup_bottom_style"
        android:orientation="vertical" >
		<ImageView 
		    android:id="@+id/popup_sign_jh_x_image"
		    android:layout_width="20dp"
        	android:layout_height="20dp"
        	android:layout_gravity="right"
        	android:layout_marginRight="-1dp"
        	android:layout_marginTop="-1dp"
        	android:src="@drawable/shut_down"
		    android:contentDescription="@null"/>
        <LinearLayout
            android:id="@+id/sign_jh_alert_contents_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="10dp"
            android:orientation="horizontal"
             >

            <ImageView
                android:id="@+id/popup_sign_success_alert_image"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/tishidingdan_tub" />

            <LinearLayout
                android:id="@+id/popup_sign_success_alert_content_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/popup_sign_success_show"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sign_success_alert"
                    android:textColor="@color/back"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/popup_sign_success_day_show"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:text="@string/sign_success_day_alert"
                    android:textColor="@color/my_user_decription"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/popup_sign_alert_jh_btn"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bg_sign_jh_style"
            android:paddingLeft="20dp"
            android:paddingTop="4dp"
             android:paddingRight="20dp"
            android:paddingBottom="4dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:text="@string/sign_success_alert_jh" />
    </LinearLayout>

</LinearLayout>