<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/sign_list_item_content_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="3dp"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:paddingTop="3dp">

        <LinearLayout
            android:id="@+id/sign_item_new_commodity_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
                <ImageView
                    android:id="@+id/sign_item_commodity_image"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:contentDescription="@null"
                    android:scaleType="fitXY" />

            <LinearLayout
                android:id="@+id/sign_item_commodity_detail_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/pay_pwd_color"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:id="@+id/sign_item_new_commodity_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20px"
                    android:ellipsize="end"
                    android:gravity="left"
                    android:maxLines="2"
                    android:textColor="@color/text_color"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/mall_new_list_price_volume"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="22px"
                    android:ellipsize="end"
                    android:gravity="left"
                    android:singleLine="true"
                    android:text="售价："
                    android:textColor="@color/main_color10"
                    android:textSize="18sp" />
                <RelativeLayout
                    android:id="@+id/mall_dk_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/new_jb_item_zgdk"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"

                        android:text="金币最高使用"
                        android:layout_centerVertical="true"
                        android:layout_below="@+id/new_jb_item_sale"
                        android:textColor="@color/main_color18" />
                    <TextView
                        android:id="@+id/new_jb_item_dk"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:text="80%"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/new_jb_item_zgdk"
                        android:layout_below="@+id/new_jb_item_sale"
                        android:textColor="@color/main_color10" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/mall_new_list_scj_volume2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10px"
                        android:ellipsize="end"
                        android:gravity="left"
                        android:singleLine="true"
                        android:text="市场价："
                        android:textColor="@color/main_color18"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/mall_new_list_scj_volume"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10px"
                        android:layout_toRightOf="@+id/mall_new_list_scj_volume2"
                        android:ellipsize="end"
                        android:gravity="left"
                        android:singleLine="true"
                        android:textColor="@color/main_color18"
                        android:textSize="14sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/sign_item_commodity_bi2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10px"
                        android:ellipsize="end"
                        android:gravity="left"
                        android:singleLine="true"
                        android:text="销量："
                        android:textColor="@color/main_color18"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/sign_item_commodity_bi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10px"
                        android:layout_toRightOf="@+id/sign_item_commodity_bi2"
                        android:ellipsize="end"
                        android:gravity="left"
                        android:singleLine="true"
                        android:text="54"
                        android:textColor="@color/main_color21"
                        android:textSize="14sp" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>