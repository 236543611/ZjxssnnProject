<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color16"
    android:id="@+id/head_layout" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/my_order_view_color"
        android:paddingBottom="20dp" >
    <include
        android:id="@+id/auction_order_value_title_id"
        layout="@layout/title_layout" />

    <ScrollView
        android:id="@+id/auction_order_value_scroll_content_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/auction_order_value_title_id"
        android:paddingBottom="30dp" >

        <LinearLayout
            android:id="@+id/auction_order_value_content_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/auction_value_head_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="10dp" >

                <ImageView
                    android:id="@+id/auction_value_image"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_weight="1.7"
                    android:contentDescription="@null" />

                <LinearLayout
                    android:id="@+id/auction_value_head_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/auction_value_head_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:textColor="@color/service_provider_color"
                        android:textSize="14sp" />

                    <RelativeLayout
                        android:id="@+id/auction_value_head_price_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical" >

                        <TextView
                            android:id="@+id/auction_value_head_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="已付款："
                            android:textColor="@color/main_merchant_item_title_color"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/auction_value_head_price_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_toRightOf="@+id/auction_value_head_price"
                            android:text="食尚币"
                            android:textColor="@color/main_merchant_item_title_color"
                            android:textSize="13sp" />
                    </RelativeLayout>
                     <TextView
                        android:id="@+id/auction_value_head_yf"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="快递费："
                        android:textColor="@color/service_provider_color"
                        android:textSize="14sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/auction_value_head_state"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="5dp"
                    android:layout_weight="2"
                    android:text="已付款"
                    android:textColor="@color/mall_item_shmoney_color"
                    android:textSize="14sp" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/auction_value_order_info_title_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:padding="5dp" >

                <ImageView
                    android:id="@+id/auction_value_order_info_image"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:contentDescription="@null"
                    android:src="@drawable/my_order_info_png" />

                <TextView
                    android:id="@+id/auction_value_order_info_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/auction_value_order_info_image"
                    android:text="订单信息"
                    android:textColor="@color/reserve_order_info_color" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/auction_order_value_info_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="10dp" >

                <TextView
                    android:id="@+id/auction_value_order_address_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="收货人姓名："
                    android:textColor="@color/my_user_decription" />

                <TextView
                    android:id="@+id/auction_value_order_address_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:text="收货人电话："
                    android:textColor="@color/my_user_decription" />

                <TextView
                    android:id="@+id/auction_value_order_address_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:text="收货人地址："
                    android:textColor="@color/my_user_decription" />

                <TextView
                    android:id="@+id/auction_value_order_info1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:text="商品：华为手机"
                    android:textColor="@color/my_user_decription" />

                <TextView
                    android:id="@+id/auction_value_order_info2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:text="商品：华为手机"
                    android:textColor="@color/my_user_decription" />

                <TextView
                    android:id="@+id/auction_value_order_info3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:text="商品：华为手机"
                    android:textColor="@color/my_user_decription" />

                <TextView
                    android:id="@+id/auction_value_order_info4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:text="商品：华为手机"
                    android:textColor="@color/my_user_decription" />

                <TextView
                    android:id="@+id/auction_value_order_info5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:text="商品：华为手机"
                    android:textColor="@color/my_user_decription" />

                <TextView
                    android:id="@+id/auction_value_order_info6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:text="商品：华为手机"
                    android:textColor="@color/my_user_decription" />

                <TextView
                    android:id="@+id/auction_value_order_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:text="拍卖时间："
                    android:textColor="@color/my_user_decription" />

                <TextView
                    android:id="@+id/auction_value_head_order"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:text="订单号："
                    android:textColor="@color/my_user_decription" />
                
            </LinearLayout>
            <Button 
                android:id="@+id/look_order_logistics_btn"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/white"
                android:padding="5dp"
                android:background="@drawable/bg_login_on"
                android:text="查看物流"
                />
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/auction_order_value_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:visibility="gone"
        android:background="@drawable/bg_login_on"
        android:padding="8dp"
        android:text="确认付款"
        android:textColor="@color/white"
        android:textSize="15sp" />
</RelativeLayout>
</RelativeLayout>