<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/my_content_color"
    android:orientation="horizontal"
    android:padding="10dp" >

    <com.zjxfood.view.RoundImageView
        android:id="@+id/eval_item_user_head_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center_vertical"
        android:contentDescription="@null" />

    <RelativeLayout
        android:id="@+id/evaluation_user_info_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/evaluation_user_info_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:ellipsize="end"
            android:maxLength="11"
            android:singleLine="true"
            android:text="@string/evaluation_name_text"
            android:textColor="@color/order_evaluation_commodity_name_color"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/evaluation_user_info_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="@string/evaluation_date"
            android:textColor="@color/order_evaluation_commodity_name_color"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/evaluation_user_info_datail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/evaluation_user_info_name"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:maxLength="200"
            android:text="@string/evaluation_detail"
            android:textColor="@color/order_evaluation_commodity_name_color"
            android:textSize="12sp" />
        <LinearLayout 
            android:id="@+id/all_evaluation_image_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/evaluation_user_info_datail"
            android:orientation="horizontal"
            >
            <ImageView 
                android:id="@+id/all_evaluation_item_image1"
                android:layout_width="match_parent"
            	android:layout_height="60dp"
            	android:layout_weight="1"
            	android:scaleType="fitXY"
            	android:layout_margin="2dp"
                android:contentDescription="@null"/>
            <ImageView 
                android:id="@+id/all_evaluation_item_image2"
                android:layout_width="match_parent"
            	android:layout_height="60dp"
            	android:layout_weight="1"
            	android:layout_margin="2dp"
            	android:scaleType="fitXY"
                android:contentDescription="@null"/>
            <ImageView 
                android:id="@+id/all_evaluation_item_image3"
                android:layout_width="match_parent"
            	android:layout_height="60dp"
            	android:layout_weight="1"
            	android:layout_margin="2dp"
            	android:scaleType="fitXY"
                android:contentDescription="@null"/>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>