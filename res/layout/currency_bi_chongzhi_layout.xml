<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include
        android:id="@+id/title_currency_bi_chongzhi_layout"
        layout="@layout/title_currency_chongzhi_layout" />

    <View
        android:id="@+id/bi_chongzhi_view"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/title_currency_bi_chongzhi_layout"
        android:background="@color/shishangbi_chongzhi_color" />

    <RelativeLayout
        android:id="@+id/bi_code_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bi_chongzhi_view"
        android:layout_marginTop="20dp"
        android:padding="10dp" >

        <TextView
            android:id="@+id/bi_code_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bi_code"
            android:textColor="@color/back"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/bi_code_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:singleLine="true"
            android:layout_toRightOf="@+id/bi_code_text"
            android:background="@drawable/bg_modify_user_edit_style" />
    </RelativeLayout>

    <Button
        android:id="@+id/bi_chongzhi_btn"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bi_code_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/btn_selector1"
        android:padding="8dp"
        android:text="@string/bi_chongzhi_liji"
        android:textColor="@color/white"
        android:textSize="14sp" />


</RelativeLayout>