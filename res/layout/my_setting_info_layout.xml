<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color16"
    android:id="@+id/head_layout"
    android:orientation="vertical" >

    <include
        android:id="@+id/my_setting_title_id"
        layout="@layout/title_my_setting_layout" />
	<ScrollView 
	    android:id="@+id/my_setting_scroll_layout"
	    android:layout_width="match_parent"
        android:background="@color/white"
    	android:layout_height="match_parent"
	    >
    <LinearLayout
        android:id="@+id/my_setting_content_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dp" >

        <RelativeLayout
            android:id="@+id/my_setting_checkout_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/my_app_now_banben_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_now_banben"
                android:textColor="@color/user_name_color"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/my_app_now_banben_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/my_app_now_banben_text"
                android:text="@string/app_now_banben_code"
                android:textColor="@color/user_name_color"
                android:textSize="15sp" />

            <Button
                android:id="@+id/my_app_checkout_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/bg_setting_checkout_btn"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:text="@string/app_checkout_btn"
                android:textColor="@color/white" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="15dp"
            android:background="@color/my_setting_line_color" />

        <RelativeLayout
            android:id="@+id/my_setting_xieyi_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_user_selector"
            android:padding="10dp"
             >

            <ImageView
                android:id="@+id/setting_xieyi_image"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:contentDescription="@string/description"
                android:src="@drawable/xieyi" />

            <TextView
                android:id="@+id/setting_xieyi_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/setting_xieyi_image"
                android:text="@string/xieyi_shuoming"
                android:textColor="@color/user_name_color"
                android:textSize="16sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/my_setting_line_color" />
        <RelativeLayout
            android:id="@+id/my_setting_guanyuwomen_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_user_selector"
            android:padding="10dp"
             >

            <ImageView
                android:id="@+id/setting_guanyuwomen_image"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:contentDescription="@string/description"
                android:src="@drawable/group" />

            <TextView
                android:id="@+id/setting_guanyuwomen_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/setting_guanyuwomen_image"
                android:text="@string/setting_guanyu_women"
                android:textColor="@color/user_name_color"
                android:textSize="16sp" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/my_setting_line_color" />
        <RelativeLayout
            android:id="@+id/my_setting_clear_cache_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_user_selector"
            android:padding="10dp"
             >

            <ImageView
                android:id="@+id/setting_clear_cache_image"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:contentDescription="@string/description"
                android:src="@drawable/cog" />

            <TextView
                android:id="@+id/setting_clear_cache_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/setting_clear_cache_image"
                android:text="@string/setting_clear_cache"
                android:textColor="@color/user_name_color"
                android:textSize="16sp" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/my_setting_line_color" />
        
        <RelativeLayout
            android:id="@+id/my_setting_phone_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_user_selector"
            android:padding="10dp"
             >

            <ImageView
                android:id="@+id/setting_phone_image"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:contentDescription="@string/description"
                android:src="@drawable/phone" />

            <TextView
                android:id="@+id/setting_phone_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/setting_phone_image"
                android:text="@string/setting_customer_service"
                android:textColor="@color/user_name_color"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/setting_phone_code_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_alignParentRight="true"
                android:text="@string/setting_customer_code"
                android:textColor="@color/user_name_color"
                android:textSize="15sp" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/my_setting_line_color" />
    </LinearLayout>
</ScrollView>
</LinearLayout>