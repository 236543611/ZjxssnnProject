<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >
    
 <LinearLayout 
        android:id="@+id/logistics_item_content_layout"
        android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:orientation="horizontal"
        >
        <LinearLayout 
            android:id="@+id/logistics_item_left_layout"
            android:layout_width="match_parent"
    		android:layout_height="match_parent"
    		android:layout_weight="3"
    		android:orientation="vertical"
            >
             <View 
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_gravity="center_horizontal"
                android:background="@color/logistics_detail_item_view_color"
                />
            <ImageView 
                android:id="@+id/logistics_item_left_dian_image"
                android:layout_width="16dp"
    			android:layout_height="16dp"
    			android:layout_gravity="center_horizontal"
    			android:src="@drawable/huiseuanquan"
                android:contentDescription="@null"/>
            <View 
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                android:background="@color/logistics_detail_item_view_color"
                />
        </LinearLayout>
        <TextView 
            android:id="@+id/logistics_item_content_text"
            android:layout_width="match_parent"
    		android:layout_height="match_parent"
    		android:textSize="15sp"
    		android:layout_weight="1"
    		android:paddingTop="5dp"
    		android:paddingBottom="5dp"
    		android:paddingRight="5dp"
    		android:gravity="center_vertical"
    		android:textColor="@color/my_user_decription2"
    		android:text="@string/logistics_details_test_track"
            />
    </LinearLayout>
</LinearLayout>
