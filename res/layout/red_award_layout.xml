<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color16"
    android:id="@+id/head_layout"
    android:orientation="vertical" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/red_list_backcolor"
        android:orientation="vertical" >
    <include
        android:id="@+id/red_award_title_layout"
        layout="@layout/title_red_award_layout" />

    <ScrollView
        android:id="@+id/red_award_scroll_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/red_award_title_layout" >

        <LinearLayout
            android:id="@+id/red_award_content_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp" >

            <RelativeLayout
                android:id="@+id/red_award_numbers_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_red_style1"
                android:padding="12dp" >

                <TextView
                    android:id="@+id/red_award_numbers_text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/red_text4"
                    android:textColor="@color/back"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/red_award_numbers_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/red_award_numbers_text2"
                    android:layout_toRightOf="@+id/red_award_numbers_text1"
                    android:background="@null"
                    android:ellipsize="end"
                    android:gravity="right"
                    android:hint="@string/red_text9"
                    android:inputType="number"
                    android:maxLength="10"
                    android:singleLine="true"
                    android:textColor="@color/back"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/red_award_numbers_text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="@string/red_text5"
                    android:textColor="@color/back"
                    android:textSize="15sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/red_award_price_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/shape_red_style1"
                android:padding="12dp" >

                <TextView
                    android:id="@+id/red_award_price_text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/red_text7"
                    android:textColor="@color/back"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/red_award_price_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/red_award_price_text2"
                    android:layout_toRightOf="@+id/red_award_price_text1"
                    android:background="@null"
                    android:ellipsize="end"
                    android:gravity="right"
                    android:hint="@string/red_text10"
                    android:inputType="numberDecimal"
                    android:maxLength="7"
                    android:singleLine="true"
                    android:textColor="@color/back"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/red_award_price_text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="元"
                    android:textColor="@color/back"
                    android:textSize="15sp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/red_award_price_show"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:paddingLeft="10dp"
                android:text="@string/red_text1"
                android:textColor="@color/red_color15"
                android:textSize="14sp" />

            <RelativeLayout
                android:id="@+id/red_award_km_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:visibility="gone"
                android:background="@drawable/shape_red_style1"
                android:padding="12dp" >

                <TextView
                    android:id="@+id/red_award_km_text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="领取范围"
                    android:textColor="@color/back"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/red_award_km_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/red_award_km_text2"
                    android:layout_toRightOf="@+id/red_award_km_text1"
                    android:background="@null"
                    android:ellipsize="end"
                    android:gravity="right"
                    android:hint="@string/red_text11"
                    android:inputType="numberDecimal"
                    android:maxLength="10"
                    android:singleLine="true"
                    android:textColor="@color/back"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/red_award_km_text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="公里以内"
                    android:textColor="@color/back"
                    android:textSize="15sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/red_award_message_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/shape_red_style1"
                android:padding="12dp" >

                <TextView
                    android:id="@+id/red_award_message_text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="留言"
                    android:textColor="@color/back"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/red_award_message_text2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/red_award_message_text1"
                    android:background="@null"
                    android:gravity="right"
                    android:hint="@string/red_text12"
                    android:maxLength="15"
                    android:singleLine="true"
                    android:textColor="@color/back"
                    android:textSize="15sp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/red_award_all_price_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:gravity="center_horizontal"
                android:text="￥0.00"
                android:textColor="@color/back"
                android:textSize="30sp" />

            <Button
                android:id="@+id/red_award_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/bg_btn_style1"
                android:padding="7dp"
                android:text="@string/red_text2"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/red_award_botton_show"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:text="@string/red_text3"
                android:textColor="@color/red_color15"
                android:textSize="13sp" />
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/red_award_alert_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/red_award_title_layout"
        android:visibility="gone"
        android:background="@color/red_transparent1" >

        <RelativeLayout
            android:id="@+id/red_award_alert_content_layout"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:background="@color/red_transparent2" >

            <ProgressBar
                android:id="@+id/commodity_list_progress"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:indeterminateDrawable="@drawable/frame_loading" />
            <TextView 
                android:id="@+id/red_award_alert_content_text"
                android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:layout_centerHorizontal="true"
        		android:textSize="13sp"
        		android:layout_below="@+id/commodity_list_progress"
        		android:text="@string/red_text8"
                />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
</RelativeLayout>