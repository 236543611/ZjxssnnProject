<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/popup_bottom_style"
    android:paddingBottom="10dp"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/popup_bindbing_bank_head_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/popup_bank_success_style"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="20dp">

        <TextView
            android:id="@+id/popup_bindbing_bank_success_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/bindbing_bank"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/popup_bindbing_bank_x_image"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/description"
            android:src="@drawable/x" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/popup_binding_content_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="-10dp"
        android:layout_weight="1.2"
        android:background="@color/my_content_color"
        android:orientation="vertical"
        android:paddingBottom="10dp">

        <LinearLayout
            android:id="@+id/popup_binding_bank_name_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="10dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/popup_bank_name_image"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="4"
                android:contentDescription="@string/description" />

            <LinearLayout
                android:id="@+id/popup_binding_bank_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/popup_binding_bank_name_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:text="@string/my_bank_jianshe_text"
                    android:textColor="@color/order_evaluation_commodity_name_color"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/popup_binding_bank_name_type"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/bank_type_info"
                    android:textColor="@color/my_order_text_color" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/my_setting_line_color" />

        <LinearLayout
            android:id="@+id/popup_binding_bank_card_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="10dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/popup_binding_bank_card_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/card"
                android:textColor="@color/order_evaluation_commodity_name_color"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/popup_binding_bank_card_id"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/card_id"
                android:layout_marginLeft="10dp"
                android:textColor="@color/order_evaluation_commodity_name_color"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/my_setting_line_color" />

        <LinearLayout
            android:id="@+id/popup_binding_bank_success_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="10dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/popup_binding_bank_success_image"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:scaleType="fitEnd"
                android:layout_marginRight="10dp"
                android:layout_gravity="center_vertical"
                android:contentDescription="@string/description"
                android:src="@drawable/success" />

            <TextView
                android:id="@+id/popup_binding_bank_success_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textSize="18sp"
                android:text="@string/bindbing_bank_success"
                android:textColor="@color/main_title_color" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>