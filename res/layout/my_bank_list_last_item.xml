<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/my_content_color"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/my_bank_add_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/add_bank_layout_selector"
        android:orientation="horizontal"
        android:padding="10dp" >

        <ImageView
            android:id="@+id/my_bank_add_image"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:contentDescription="@string/description"
            android:src="@drawable/bank_add" />

        <TextView
            android:id="@+id/my_bank_add_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/my_bank_add_image"
            android:text="@string/my_bank_add_text"
            android:textColor="@color/my_back_add_color"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/my_bank_add_right"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/description"
            android:src="@drawable/fanye_3" />
    </RelativeLayout>

</LinearLayout>